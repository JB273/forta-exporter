[Unit]
Description=Forta Exporter
After=network.target

[Service]
Environment=PYTHONUNBUFFERED=1
Environment=SCANNER_ADDRESS=<scanner_address>
Type=simple
Restart=always
RestartSec=1
User=pops
WorkingDirectory=$HOME/forta-exporter
ExecStart=$HOME/forta-exporter/.venv/bin/python3 -u forta-exporter/exporter.py
StandardError=syslog
SyslogIdentifier=forta-exporter
StartLimitInterval=0

[Install]
WantedBy=multi-user.target
